<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorPrimary">@color/white_60</item>
        <item name="android:colorAccent">@color/white_80</item>
        <item name="android:colorControlActivated">@color/white_60</item>
    </style>

    <style name="Zero">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HorizontalSeparator">
        <item name="android:layout_width">@dimen/separator_width</item>
        <item name="android:layout_height">@dimen/separator_height</item>
        <item name="android:layout_marginBottom">@dimen/separator_margin_8</item>
        <item name="android:layout_marginStart">@dimen/separator_margin_4</item>
        <item name="android:layout_marginTop">@dimen/separator_margin_4</item>
        <item name="android:background">@color/white_80</item>
    </style>

    <style name="SmallCardText" parent="Wrap">
        <item name="android:layout_marginBottom">@dimen/card_header_margin</item>
        <item name="android:layout_marginTop">@dimen/card_header_margin</item>
        <item name="android:textSize">@dimen/font_size_20</item>
        <item name="android:textColor">@color/white_50</item>
    </style>

    <style name="CardHeader" parent="Wrap">
        <item name="android:layout_marginStart">@dimen/card_header_margin</item>
        <item name="android:layout_marginTop">@dimen/card_header_margin</item>
        <item name="android:textColor">@color/white_50</item>
    </style>

    <style name="Card" parent="Zero">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="VerticalSeparator">
        <item name="android:layout_width">@dimen/separator_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/separator_margin_8</item>
        <item name="android:layout_marginTop">@dimen/separator_margin_8</item>
        <item name="android:background">@color/white_80</item>
    </style>

    <style name="Card.Left">
    </style>

    <style name="Card.Right">
    </style>

    <style name="EllipsizeTextBig" parent="Wrap">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white_50</item>
        <item name="android:textSize">@dimen/font_size_20</item>
    </style>

</resources>
